{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "target": "ES5",                        
      "module": "none",                   
      "strict": true,                         
      "esModuleInterop": true,                
      "skipLibCheck": true,                   
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["node_modules/@types", "./typings"],
      // "resolveJsonModule": true
    },
    "include": [
      "src/**/*"                             
    ],
    "exclude": [
      "node_modules"                         
    ]
  }
  